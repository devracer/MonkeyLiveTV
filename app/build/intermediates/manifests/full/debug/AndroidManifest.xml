<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atv.com.project.popkontv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/PopkonTV" >
        <activity
            android:name="atv.com.project.popkontv.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="atv.com.project.popkontv.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="atv.com.project.popkontv.fragment.YouTubeFragmentActivity" />
        <activity
            android:name="atv.com.project.popkontv.youtube.YouTubeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="atv.com.project.popkontv.youtube.CustomLightboxActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.Translucent" />
        <activity android:name="atv.com.project.popkontv.youtube.CustomYouTubeControlsActivity" />
        <activity android:name="atv.com.project.popkontv.videostream.MainActivityVideoStream" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="AIzaSyA34h-7yPCNSBkBdJ9cAhLHozGn4JwHtWs" />
    </application>

</manifest>