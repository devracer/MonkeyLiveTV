            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:textSize="18sp"-->
            <!--android:layout_gravity="center"-->
            <!--android:text="Record this stream"-->
            <!--android:layout_height="wrap_content" />-->
    <!--</LinearLayout>-->
</LinearLayout>