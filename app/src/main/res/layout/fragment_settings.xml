<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/notifySettingPhTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:padding="5.0dp"
        android:textSize="20.0sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notifyFollowedSettingPhTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="User Followed"
            android:padding="5.0dp"
            android:textSize="18.0sp"
            android:layout_marginLeft="15.0dp"/>
        <Switch
            android:id="@+id/followNotificationToggle"
            android:layout_width="wrap_content"
            android:layout_marginRight="20.0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/notifyNewStreamSettingPhTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="New Stream Started"
            android:padding="5.0dp"
            android:textSize="18.0sp"
            android:layout_marginLeft="15.0dp"/>
        <Switch
            android:id="@+id/newStreamNotificationToggle"
            android:layout_width="wrap_content"
            android:layout_marginRight="20.0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>