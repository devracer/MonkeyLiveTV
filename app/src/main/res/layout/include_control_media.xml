<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/pop_camera_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:orientation="vertical">
            <ImageView
                android:id="@id/pop_camera_led"
                style="@style/player_control"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:src="@drawable/ic_camera_led" />

            <ImageView
                android:id="@id/pop_camera_type"
                style="@style/player_control"
                android:clickable="true"
                android:layout_toRightOf="@id/pop_camera_led"
                android:src="@drawable/ic_camera_type" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="right|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@id/pop_camera_settings"
            style="@style/player_control"
            android:clickable="true"
            android:src="@drawable/ic_camera_settings" />

        <ImageView
            android:id="@id/pop_camera_option"
            style="@style/player_control"
            android:clickable="true"

            android:src="@drawable/ic_camera_option" />
    </LinearLayout>
</RelativeLayout>
