<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="atv.com.project.popkontv.Fragemnts.UserProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200.0dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/profileUserCoverImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ff08bfb4"
            android:alpha="0.7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10.0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/profileUserIv"
                android:layout_width="70dp"
                android:layout_marginBottom="5.0dp"
                android:layout_marginTop="20.0dp"
                android:layout_height="70dp"/>
            <TextView
                android:id="@+id/profileUserNameTv"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:text="Ricky"
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/profileUserHandleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="\@rickyschoder"
                android:layout_margin="1.0dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/profileUserScoreTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="12548"
                android:textSize="18sp"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@drawable/dropshadow"
        android:layout_height="15.0dp"/>
    <TextView
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:id="@+id/profileUserFollowing"
        android:layout_width="match_parent"
        android:text="Following"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:drawableRight="@drawable/caretwhite"
        android:textColor="@color/grey3"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:id="@+id/following_card_shadow"
        android:layout_width="match_parent"
        android:background="@drawable/dropshadow"
        android:layout_height="15.0dp"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="@drawable/lighttransparent"/>-->
    <TextView
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:id="@+id/profileUserFollowers"
        android:layout_width="match_parent"
        android:text="Followers"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:textColor="@color/grey3"
        android:drawableRight="@drawable/caretwhite"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/followers_card_shadow"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:layout_width="match_parent"
        android:background="@drawable/dropshadow"
        android:layout_height="15.0dp"/>
