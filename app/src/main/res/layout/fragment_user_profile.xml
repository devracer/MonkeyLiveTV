        <!--android:layout_width="match_parent"-->
        <!--android:background="@drawable/dropshadow"-->
        <!--android:layout_height="15.0dp"/>-->
    <TextView
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:id="@+id/profileUserLeaderBoard"
        android:layout_width="match_parent"
        android:text="Leader Board"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:textColor="@color/grey3"
        android:onClick=""
        android:drawableRight="@drawable/caretwhite"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/leader_board_card_shadow"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:layout_width="match_parent"
        android:background="@drawable/dropshadow"
        android:layout_height="15.0dp"/>
    <TextView
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:text="Settings"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:textColor="@color/grey3"
        android:drawableRight="@drawable/caretwhite"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/settings_card_shadow"
        android:layout_marginLeft="5.0dp"
        android:layout_marginRight="5.0dp"
        android:layout_width="match_parent"
        android:background="@drawable/dropshadow"
        android:layout_height="15.0dp"/>
    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:background="@drawable/primaryround"
        android:layout_margin="5.0dp"
        android:text="LOG OUT"
        android:textColor="#fff"
        android:layout_height="wrap_content" />

</LinearLayout>
