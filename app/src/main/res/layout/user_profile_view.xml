<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/profileUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/new_primary_color_pressed"
            android:gravity="center"
            android:text="Arjun"
            android:textSize="24sp"
            android:layout_alignParentBottom="true"
            android:padding="5.0dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/lighttransparent"/>
    <TextView
        android:id="@+id/profileScore"
        android:layout_width="match_parent"
        android:text="Score (51154)"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:textColor="@color/new_primary_color_pressed"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/lighttransparent"/>
    <TextView
        android:id="@+id/profileFollowing"
        android:layout_width="match_parent"
        android:text="Following"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:drawableRight="@drawable/caretwhite"
        android:textColor="@color/new_primary_color_pressed"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/lighttransparent"/>
    <TextView
        android:id="@+id/profileFollowers"
        android:layout_width="match_parent"
        android:text="Followers"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:textColor="@color/new_primary_color_pressed"
        android:drawableRight="@drawable/caretwhite"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/lighttransparent"/>
    <TextView
        android:id="@+id/leaderBoard"
        android:layout_width="match_parent"
        android:text="Leader Board"
        android:padding="10.0dp"
        android:textSize="18.0sp"
        android:textColor="@color/new_primary_color_pressed"
        android:drawableRight="@drawable/caretwhite"
        android:layout_height="wrap_content" />
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="@drawable/lighttransparent"/>-->
    <!--<TextView-->
        <!--android:id="@+id/settings"-->
        <!--android:layout_width="match_parent"-->
        <!--android:text="Settings"-->
        <!--android:padding="10.0dp"-->
        <!--android:textSize="18.0sp"-->
        <!--android:textColor="@color/new_primary_color_pressed"-->
        <!--android:drawableRight="@drawable/caretwhite"-->
        <!--android:layout_height="wrap_content" />-->
    <Button
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:background="@drawable/primaryround"
        android:layout_marginTop="5.0dp"
        android:text="LOG OUT"
        android:textColor="#fff"
        android:layout_height="wrap_content" />
</LinearLayout>